<theme>
	<formatVersion>3</formatVersion>
	<include>./carbon_red.xml</include>

	<view name="system,basic,detailed">

		<helpsystem name="help">
			<textColor>7d7d7d</textColor>
			<iconColor>7d7d7d</iconColor>
		</helpsystem>

	</view>

	<view name="basic">

		<textlist name="gamelist">
			<selectorColor>1c1c1c</selectorColor>
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.050</fontSize>
			<forceUppercase>1</forceUppercase>
			<pos>0.005 0.18</pos>
			<size>0.950 0.52</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

	<view name="detailed">

		<image name="md_image">
			<pos>0.75 0.55</pos>
			<maxSize>0.6 0.6</maxSize>
			<origin>0.5 0.5</origin>
		</image>

	</view>

<feature supported="video">

	<view name="video">

		<video name="md_video">
			<pos>0.75 0.65</pos>
			<!--<maxSize>0.6 0.8</maxSize>-->
			<size>0.6 0.45</size>
			<origin>0.5 0.5</origin>
			<delay>0.2</delay>
			<showSnapshotNoVideo>true</showSnapshotNoVideo>
			<showSnapshotDelay>false</showSnapshotDelay>
		</video>

		<image name="md_marquee">
			<pos>0.6 0.2</pos>
			<origin>0 0</origin>
			<maxSize>0.3 0.28</maxSize>
		</image>

	</view>

</feature>

	<view name="video,detailed">
		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount">
			<pos>1 1</pos>
		</text>

		<text name="md_playcount, md_players, md_genre, md_publisher, md_developer">
			<pos>1 1</pos>
		</text>

		<datetime name="md_releasedate">
			<pos>1 1</pos>
		</datetime>

		<textlist name="gamelist">
			<selectorColor>1c1c1c</selectorColor>
			<primaryColor>969696</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/Cabin-Bold.ttf</fontPath>
			<fontSize>0.05</fontSize>
			<forceUppercase>1</forceUppercase>
			<pos>0.0 0.167</pos>
			<size>0.442 0.741</size>
			<alignment>left</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<scrollSound>./art/scroll.wav</scrollSound>
		</textlist>

	</view>

</theme>
